<%= simple_form_for @contract do |f| %>
  <%= f.input :customer, label: 'Cliente: ' %>
  <%= f.input :delivery_address, label: 'Endereço de Entrega: ' %>
  <%= f.input :rental_period, label: 'Prazo de Locação: ' %>
  <%= f.input :total_amount, label: 'Valor Total' %>
  <%= f.input :discount, label: 'Desconto: ' %>
  <%= f.association :equipment, label_method: :full_description, collection: Equipment.all %>
  <%= f.input :contact, label: 'Responsável: ' %>
  <%= f.submit 'Emitir Contrato' %>
<% end %>
